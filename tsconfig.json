{
    "compilerOptions": {
        "outDir": "./dist",
        "module": "commonjs",
        "target": "es6",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strictNullChecks": true,
        "strict": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "rootDir": "src",
        "declaration": true
        // "sourceMap": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "**/__tests__/*", "dist", "coverage", "**.test.ts"]
}
